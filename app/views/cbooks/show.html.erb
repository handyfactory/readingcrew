<!-- Content -->
<div id="content">
    
    <!-- Section / Blog -->
    <section id="blog" class="section">

        <div class="container-fluid container-custom clearfix">
            <!-- Main -->
            <div class="main left">
                <!-- Post / Single -->
                <article class="post single">
                    <nav class="post-nav btn-group">
                        <% cbs = @cbook.club.cbooks%>
                        <% num = cbs.index(@cbook)%>
                        
                        <%if num == 0%>
                            <a href="/clubs/<%= @cbook.club.id%>" class="btn btn-secondary btn-sm"><i class="ti-layout-grid2"></i></a>
                            <% if cbs.size != 1%>
                            <a href="/cbooks/<%=cbs[num + 1].id%>" class="btn btn-secondary btn-sm"><i class="ti-angle-right"></i></a>
                            <% end%>
                        <%elsif  num == cbs.size-1 %>
                            <a href="/cbooks/<%=cbs[num - 1].id%>" class="btn btn-secondary btn-sm"><i class="ti-angle-left"></i></a>
                            <a href="/clubs/<%= @cbook.club.id%>" class="btn btn-secondary btn-sm"><i class="ti-layout-grid2"></i></a>
                        <%else%>
                            <a href="/cbooks/<%=cbs[num - 1].id%>" class="btn btn-secondary btn-sm"><i class="ti-angle-left"></i></a>
                            <a href="/clubs/<%= @cbook.club.id%>" class="btn btn-secondary btn-sm"><i class="ti-layout-grid2"></i></a>
                            <a href="/cbooks/<%=cbs[num + 1].id%>" class="btn btn-secondary btn-sm"><i class="ti-angle-right"></i></a>
                        <%end%>
                    </nav>
                    <span class="date text-muted"><%= @cbook.register_at.strftime("%m %d, %Y")%></span>
                    <h5><%= @cbook.club.title%>의 <%= @cbook.times%>회 선정도서</h5>
                    <h4 class="post-title"><%= @cbook.title%></h4>
                    <ul class="post-meta">
                        <li><i class="li-usb1"></i><%= @cbook.category%></li>
                        <li><i class="li-feedback"></i>리뷰 : <%= @cbook.replies.size%>개</li>
                    </ul>
                    <div class="post-image"><img height="100" width ="100" src="<%= @cbook.image%>" alt=""></div>
                    <div class="post-content">
                        <p class="lead"><%= @cbook.why.html_safe%></p>
                        <p></p>
                        <!-- Blockquote -->
                        <blockquote class="blockquote animated" data-animation="fadeInLeft">
                            <p><%= "이번주 선정도서입니다^^"%></p>
                            <footer>
                               
                                    <div class="avatar"><img src="<%= User.find(@cbook.club.rolls.find_by(relation: "captain").user_id).image%>" alt=""></div>
                                    <div class="content">
                                        <span class="details"><%= User.find(@cbook.club.rolls.find_by(relation: "captain").user_id).name%><span class="text-muted"><%= User.find(@cbook.club.rolls.find_by(relation: "captain").user_id).email%></span></span>
                                        <p></p>
                                    </div>
                                
                                <!--<img src="" alt="">-->
                                
                            </footer>
                        </blockquote>
                    </div>
                    <div class="post-comments post-module">
                        <h4>Comments</h4>
                        <div class="content">
                            <ul class="comments">
                                
                                <% @cbook.replies.each do |reply|%>
                                    <li>
                                        <div class="avatar"><img src="<%= reply.user.image%>" alt=""></div>
                                        <div class="content">
                                            <span class="details"><%= reply.user.name%> on <%= reply.created_at.strftime("%m %d, %Y")%>,  <a href="/cbooks/reply2/<%= reply.id%>" class="text-primary">Reply</a></span>
                                            <p><%= reply.comment%></p>
                                        </div>
                                        
                                        <% if reply.reply2s%>    
                                        <ul>
                                            <% reply.reply2s.each do |reply2|%>
                                                <li>
                                                <div class="avatar"><img src="<%= reply2.user.image%>" alt=""></div>
                                                <div class="content">
                                                    <span class="details"><%= reply2.user.name%> on <%= reply2.created_at.strftime("%m %d, %Y")%>, <a href="/cbooks/reply2/<%= reply.id%>" class="text-primary" >Reply</a></span>
                                                    <p><%= reply2.comment%></p>
                                                </div>
                                                </li>
                                            <% end%>
                                        </ul>
                                        <%end%>
                                        
                                        <%if reply.reply2%>
                                            <% reply.update(reply2: false)%>
                                                <ul>
                                                    <div class="content">
                                                        <form action="/cbooks/reply2_register/<%= reply.id%>" id="add-comment" class="validate-form" method= "post">
                                                            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token%>">
                                                            <input type="hidden" name = "user_id" value="<%= current_user.id%>" />
                                                            
                                                            <div class="form-group">
                                                                <textarea name="comment" id="comment" cols="30" rows="4" class="form-control" placeholder="Comment" required></textarea>
                                                            </div>
                                                            <button class="btn btn-submit">Send a comment</button>
                                                        </form>
                                                    </div>
                                                </ul>
                                        <%end%>
                                            
                                    </li>
                                    
                                <% end%>
                                
                            </ul>
                        </div>
                        <div class="post-add-comment post-module">
                        <h4>리뷰 남기기</h4>
                        <div class="content">
                            <form action="/cbooks/reply/<%=@cbook.id%>" id="add-comment" class="validate-form" method= "post">
                                <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token%>">
                                <input type="hidden" name = "user_id" value="<%= current_user.id%>" />
                                
                                <div class="form-group">
                                    <textarea name="comment" id="comment" cols="30" rows="4" class="form-control" placeholder="Comment" required></textarea>
                                </div>
                                <button class="btn btn-submit">Send a comment</button>
                            </form>
                        </div>
                        
                    </div>
                    </div>
                    
                    
                </article>
            </div>
            <!-- Sidebar -->
            <div class="sidebar right">
                <!-- Widget - Recent posts -->
                <div class="widget widget-recent-posts">
                    <h6 class="text-muted">Recent Posts</h6>
                    <ul class="list-posts">
