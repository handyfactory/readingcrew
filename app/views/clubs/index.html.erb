    </div>
    <%if current_user.is_admin?%>
    <%= link_to "관리자페이지", '/admin/clubs'%>
    <%end%>
    <!-- Section / Portfolio -->
    <section id="portfolio" class="section">

        <div class="container-fluid container-custom">
            <!-- Filter -->
            <nav class="mb-40">
                <ul class="nav nav-pills filter-isotope mb-50 text-center" data-filter-list="#works-list">
                    <li class="nav-item active"><a href="#" class="nav-link" data-filter="*"><i class="pe-7s-folder"></i>All</a></li>
                    <li class="nav-item"><a href="#" class="nav-link" data-filter=".filter-one"><i class="pe-7s-graph1"></i>Latest</a></li>
                    <li class="nav-item"><a href="#" class="nav-link" data-filter=".filter-two"><i class="pe-7s-comment"></i>Most Follow</a></li>
                    
                </ul>         
            </nav>
            <!-- Works List -->
            <div id="works-list" class="row masonry">
                <div class="masonry-sizer col-lg-4 col-sm-6 col-xs-12"></div>
                
                <% if @clubs%>
                <% @clubs.each do |club|%>
                <div class="masonry-item filter-one col-lg-4 col-sm-6 col-xs-12">
                    <!-- Image Box -->
                    <div class="image-box image-hover">
                            <div class="image">
                                <a href="/clubs/<%= club.id%>"><img src="<%= club.image%>" alt=""></a>
                            </div>
                            <div class="title">
                                <a href="/clubs/<%= club.id%>">
                                    <h5 class="mb-0 text-xs-center"><%= club.title%></h5>
                                    <p class="text-sm text-muted mb-0 text-xs-center"><%= club.location%></p>
                                </a>
                                
                                <a href="/clubs/<%= club.id%>">
                                    <h5 class="text-sm mb-0">팔로우 : <%= club.rolls.size%>명</h5>
                                </a>
                            </div>
                            <% if club.rolls.find_by(user_id: current_user.id)%>
                                <% if club.rolls.find_by(user_id: current_user.id).relation=="captain"%>
                                    <h5 class="text-sm mb-0">내 독서모임</h5>
                                <% elsif club.rolls.find_by(user_id: current_user.id).relation=="follow"%>
                                    <a href="/clubs/unfollow/<%= club.id%>" class="ml-20 btn btn-primary btn-sm animated">팔로우 해제</a>
                                <%else%>
                                    <a href="/clubs/follow/<%= club.id%>" class="ml-20 btn btn-primary btn-sm animated">팔로우</a>
                                <%end%>
                            <% else%>    
                                <a href="/clubs/follow/<%= club.id%>" class="ml-20 btn btn-primary btn-sm animated">팔로우</a>
                            <%end%>
                    </div>
                    <div>
                        <h1></h1>
                    </div>
                    
                </div>
                
                <% end%>
                
                <% end%>
                
            </div>
            
            
        </div>
        
    </section>
    <%= paginate @clubs %>

