<div id="content">

    <!-- Page Title -->
    <div class="page-title pb-0">
        <div class="container-fluid container-custom">
            <h1>선정도서들</h1>
            <p class="lead text-muted"><%= @club.title%></p>
        </div>
    </div>

    <!-- Section / Blog -->
    <section id="blog" class="section">

        <div class="container-fluid container-custom clearfix">
            <!-- Main -->
            <div class="main left">
                <div class="row masonry">  
                    <div class="masonry-sizer col-sm-6 col-xs-12"></div>
                   
                    <% @cbooks.sort_by{|x| x.register_at}.reverse.each do |cbook|%>
                    
                        <div class="masonry-item col-sm-6 col-xs-12">
                            <!-- Post - Item -->
                            <article class="post item">
                                <div class="post-content">
                                    <h3><%= cbook.club.title%>클럽 <%= cbook.times%>회 선정도서</h3>
                                </div>
                                <div class="post-image">
                                    <img src="<%=cbook.image%>" alt="">
                                </div>
                                <div class="post-content">
                                    
                                    <span class="date text-muted"><%= cbook.register_at.strftime("%m %d, %Y")%></span>
                                    <h4><a href="/cbooks/<%= cbook.id%>"><%= cbook.title%></a></h4>
                                    <p><%= cbook.contents%></p>
                                    <a href="/cbooks/<%= cbook.id%>" class="btn btn-primary btn-sm">리뷰보기</a>
                                </div>
                                <ul class="post-meta">
                                    <li><i class="li-usb1"></i><%= cbook.category%></li>
                                    <li><i class="li-feedback"></i>리뷰 : <%= cbook.replies.size%>개</li>
                                </ul>
                            </article>
                        </div>
                        
                    <% end%>
                    
                </div>
                <!-- Pagination -->
                <%= paginate @cbooks %>
                
            </div>
            
            <!-- Sidebar -->
            <div class="sidebar right">
                <!-- Widget - Recent posts -->
                <div class="widget widget-recent-posts">
                    <h6 class="text-muted">Recent Posts</h6>
                    <ul class="list-posts">
                        <li>
                            <a href="blog-post-sidebar-right.html">Crazy developer ideas on 2016</a>
                            <span class="date">February 14, 2015</span>
                        </li>
                        <li>
                            <a href="blog-post-sidebar-right.html">Our road trip to London!</a>
                            <span class="date">February 14, 2015</span>
                        </li>
                        <li>
                            <a href="blog-post-sidebar-right.html">New iOS design concept</a>
                            <span class="date">February 14, 2015</span>
                        </li>
                    </ul>
                </div>
                <!-- Widget - Twitter -->
                <div class="widget widget-twitter">
                    <h6 class="text-muted">Latest Tweets</h6>
                    <div class="twitter-feed" data-count="2"></div>
                </div>
                <!-- Widget - Newsletter -->
                <div class="widget widget-newsletter">
                    <h6 class="text-muted">Subscribe Us</h6>
                    <form action="//suelo.us12.list-manage.com/subscribe/post-json?u=ed47dbfe167d906f2bc46a01b&amp;id=24ac8a22ad" id="sign-up-form" class="sign-up-form validate-form" method="POST"
                        data-message-error="Opps... Something went wrong - please try again later"
                        data-message-success="Yeah! You will recieve a confirmation email soon..."
                    >
                        <div class="form-group">
                            <input type="email"  name="EMAIL" id="mce-EMAIL" value="" class="form-control" placeholder="Your e-mail..." required>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-submit">
                                <span>Subscribe!</span>
                                <svg class="loader loader-white" width="32px" height="32px" viewBox="0 0 32 32" xmlns="http://www.w3.org/2000/svg"><circle class="circle" fill="none" stroke-width="2" stroke-linecap="round" cx="16" cy="16" r="14"></circle></svg>
                            </button>
                        </div>
                    </form>
                </div>
                <!-- Widget - Instagram -->
                <div class="widget widget-instagram">
                    <h6 class="text-muted">Instagram Feed</h6>
                    <div id="instagram-feed" class="instagram-grid clearfix" data-limit="6"></div>
                </div>
            </div>
        </div>
        
    </section>

</div>
