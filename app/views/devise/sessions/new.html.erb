<%= render 'shared/header'%>
<section id="contact" class="section">

    <div class="container-fluid container-custom">
        <div class="row">
            <div class="col-md-3">
            </div>
            <div class="col-md-7">
                <div class="box right">
                    <div class=container>
                      <div class=row>
                        <div class=col-5></div>
                        <div class=col>
                          </div>
                        <div class=col></div>
                      </div>
                    </div>
                    <h2><%= t('.sign_in') %></h2>
                          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                            <div class="field form-group">
                              <%= f.label :email , class: "form-control"%><br />
                              <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "form-control"%>
                            </div>
                          
                            <div class="field form-group">
                              <%= f.label :password , class: "form-control"%><br />
                              <%= f.password_field :password, autocomplete: "off" , class: "form-control"%>
                            </div>
                          
                            <% if devise_mapping.rememberable? -%>
                              <div class="field">
                                <%= f.check_box :remember_me %>
                                <%= f.label :remember_me %>
                              </div>
                            <% end -%>
                          
                            <div class="form-group form-submit">
                              <button type="submit" class="btn btn-submit">
                                <span>로그인</span>
                                <svg class="loader loader-white" width="32px" height="32px" viewBox="0 0 32 32" xmlns="http://www.w3.org/2000/svg"><circle class="circle" fill="none" stroke-width="2" stroke-linecap="round" cx="16" cy="16" r="14"></circle></svg>
                              </button>
                            </div>
                            <%= render "devise/shared/links" %>
                          <% end %>
                        
                </div>
            </div>
        </div>
    </div>

</section>
